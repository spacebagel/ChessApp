<Application x:Class="ChessApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChessApp"
             StartupUri="Windows/LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="defaultImage" UriSource="/Assets/Pictures/ChessPlaceholder.png" />
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Themes/LightTheme.xaml"/>

                <ResourceDictionary Source="Styles/MainStyle.xaml"/>

                <ResourceDictionary Source="Assets/Icons/Icons.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
